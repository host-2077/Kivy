WindowManager:
    HomeWindow:
    UserWindow:
    MaestroScreen:

<HomeWindow>:
    name: "home"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "MÃ¡quina Zen. \nVer. 1.1"
        Label:
            text: "Coded by host2077 \nwith the assistance of Chat GTP"

        AnchorLayout:
            Button:
                size_hint: .2, .2
                pos_hint: { "center_x": .5 }
                text: "+"
                on_release: 
                    app.root.current = "username"

<UserWindow>:
    name: "username"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Selecciona un maestro"

        ScrollView:                 
            GridLayout:
                rows: 1
                size_hint_x: None
                width: "1500dp"
                Button:
                    text: "Bodhidharma"
                    on_release:
                        app.root.current = "quotescreen"
                        app.root.get_screen("quotescreen").show_quote("Maestro A")

                Button:
                    text: "Milarepa"
                    on_release:
                        app.root.current = "quotescreen"
                        app.root.get_screen("quotescreen").show_quote("Maestro B")

                Button:
                    text: "Dogen"
                    on_release:
                        app.root.current = "quotescreen"
                        app.root.get_screen("quotescreen").show_quote("Maestro C")

<MaestroScreen>:
    name: "quotescreen"
    size: root.width, root.height

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.5
            padding: "10dp"
            spacing: "10dp"

            Label:
                id: quote_text
                font_size: "20dp"
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                markup: True
                italic: True

        BoxLayout:
            size_hint: 1, 0.2
            padding: "10dp"
            Button:
                size_hint: .2, None
                height: dp(40)
                pos_hint: { "center_x": .5 }
                text: "Volver"
                on_release: app.root.current = "home"