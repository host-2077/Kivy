AnchorLayoutExample:

<AnchorLayoutExample>:
    # right, left, center
    # bottom, top, center
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"

    Button:
        text: "A"
        size_hint: .5, .5
        # size: width, height
        # size: "40dp", "40dp"
        # width: "100dp"
        # height: "60dp"
        # pos_hint horizontal: x, center_x, right
        # pos_hint vertical: y, center_y, top
        pos_hint: { "center_y": .5 }
        
    BoxLayout:
        spacing: "10dp"
        orientation: "vertical"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"

    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 1, 0, 1
    Label:
        text: "Hello2"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        # color: r, g, b, a
        color: 1, 0, 0, 1